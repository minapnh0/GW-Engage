<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events">

    <!-- Hard coding in news articles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars = "vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:background="@color/teal_700">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@tools:sample/avatars" />
                <TextView
                    android:id="@+id/news_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="GWISA Application Clinic"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/news_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Sunday, November 28, 2021"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Posted by Jiacheng Ji for GW International Students Association" />
                <TextView
                    android:id="@+id/news_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Is the internship hunt getting too brutal for you? Say no more, ISA's got you!ðŸ˜ŽðŸ˜Ž Come to our Application Clinic on December 1 to take a deeper dive into cover letters and resumes." />
            </LinearLayout>
        </LinearLayout>

        <!-- News event #2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:background="@color/teal_700">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@tools:sample/avatars" />
                <TextView
                    android:id="@+id/news_Title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="GWISA Application Clinic"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/news_date2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Sunday, November 28, 2021"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/author2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Posted by Jiacheng Ji for GW International Students Association" />
                <TextView
                    android:id="@+id/news_description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Is the internship hunt getting too brutal for you? Say no more, ISA's got you!ðŸ˜ŽðŸ˜Ž Come to our Application Clinic on December 1 to take a deeper dive into cover letters and resumes." />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>