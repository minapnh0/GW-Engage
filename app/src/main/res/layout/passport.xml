<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars = "vertical">


        <!-- passport event  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/teal_200">


            <LinearLayout
                android:id="@+id/passport_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/passport_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/passport"/>
                <TextView
                    android:id="@+id/pssport_Title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="GW Passport Event: GW's MBB VS RADFORD"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/passport_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Monday, December 13, 2021"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/passport_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="6:00 PM EST " />
                <TextView
                    android:id="@+id/passport_host_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:gravity="center"
                    android:text=" Hosted by: George's Army" />
                <TextView
                    android:id="@+id/passport_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:gravity="center"
                    android:text="GW Passport is a GW Athletics sponsored program where students have the chance to receive $25 gift cards to Amazon after attending 5 athletics events! Pick up your physical passport at the event, get it stamped, and check in on Engage to be entered to win!
This passport event will be on Sunday 12/12 at 2:00pm in the Charles E. Smith Center as GWWBB takes on HOWARD!

" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>