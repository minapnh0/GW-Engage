<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="794dp"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <!-- Event #1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/pewter_gray"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/adopted_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/adopted_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/adopted" />

                <TextView
                    android:id="@+id/adopted_Title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Adopted and Fostered Students Association"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adopted_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text=" afsagwu@gmail.com"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adopted_addy_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text=" Washington, DC 20052 United States"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/adopted_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:gravity="center"
                    android:text="The Adopted and Fostered Students Association supports GW’s adopted and fostered student population. We seek to promote the understanding and visibility of GW’s adopted and fostered students while also providing them a community to celebrate their experiences. We also seek to educate about adoption and fostering to encourage these practices. Whether you are adopted, fostered, have relatives who are, or are interested in doing so in the future, all are welcome to join our community."/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>