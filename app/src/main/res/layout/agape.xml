<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="794dp"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <!-- Event #1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/pewter_gray"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/agape_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/agape_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/agape" />

                <TextView
                    android:id="@+id/agape_Title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Agape Campus Christian Fellowship"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/agape_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text=" agape@gwu.edu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/agape_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="202-549-2011"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/agape_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:gravity="center"
                    android:text="Agapé Campus Christian Fellowship is dedicated to sharing the message and power of God’s unconditional love to GWU through a lifestyle of revival consisting of worship, prayer, discipleship, and fellowship. We have weekly bible studies and campus meetings, and Sunday worship services. We are so excited to meet you and looking forward to a great year together! "/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>